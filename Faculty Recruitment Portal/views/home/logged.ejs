<% layout("/layout/every.ejs") %>

  <link rel="stylesheet" type="text/css" href="https://ofa.iiti.ac.in/facrec_che_2023_july_02/css/pages.css">
  <h3
    style="color: #e10425; margin-bottom: 20px; font-weight: bold; text-align: center;font-family: 'Noto Serif', serif;"
    class="blink_me">Application for Faculty Position</h3>
  <style>
    .blink_me {
      animation: blinker 2.5s linear infinite;
    }

    @keyframes blinker {
      50% {
        opacity: 0;
      }
    }

    body {
      user-select: none;
      font-family: 'Montserrat', sans-serif;
      line-height: 1.6;
      color: #333;
    }

    .iit-logo {
      max-width: 20vw;
      height: auto;
      margin: 0 auto;
      display: block;
    }

    .container1 {
      width: 94%;
      border-radius: 15px;
      margin-top: 20px;
      padding: 24px;
      box-shadow: 0px 1px 30px 1px #284d7a;
      background-color: #e0ea85;
      margin-inline: auto;
    }

    .login-form {
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0px 1px 30px 1px #284d7a;
      background-color: #F7FFFF;
    }

    .login-form h3 {
      font-weight: bold;
      font-family: 'Montserrat', sans-serif;
      text-align: center;
      color: #1976D2;
      margin-bottom: 30px;
    }

    .login-form form {
      text-align: center;
    }

    .login-form input {
      margin-bottom: 10px;
    }

    .login-form button {
      margin-top: 10px;
      background-color: #1976D2;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .login-form button:hover {
      background-color: #1565C0;
    }

    .forgot-password {
      float: right;
      color: #1976D2;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .forgot-password:hover {
      color: #1565C0;
    }

    .form-control {
      margin-bottom: 20px;
    }

    .captcha-container {
      position: relative;
      margin-bottom: 20px;
      border: 1px solid #ddd;
      padding: 10px;
      border-radius: 5px;
    }

    .randomString {
      font-size: 1.5rem;
      letter-spacing: 2px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
      user-select: none;
      color: #333;
      text-shadow: 0 0 5px rgba(255, 255, 255, 0.8);
    }

    .captcha-image {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      border-radius: 5px;
    }

    #iit-patna-heading {
      color: #1565C0;
    }
  </style>
  <div class="container1">
    <div class="row">
      <div class="col-md-6">
        <img
          src="https://upload.wikimedia.org/wikipedia/en/thumb/5/52/Indian_Institute_of_Technology%2C_Patna.svg/1200px-Indian_Institute_of_Technology%2C_Patna.svg.png"
          class="iit-logo" />
      </div>
      <div class="col-md-6">
        <div class="login-form">
          <h3><strong><u>LOGIN HERE</u></strong></h3>
          <form role="form" method="post">
            <input type="hidden" name="ci_csrf_token" value="" />
            <div class="inner-addon left-addon">
              <i class="glyphicon glyphicon-envelope"></i>
              <input type="text" name="email" placeholder="Your email" autofocus="" required />
            </div>
            <br />
            <div class="inner-addon left-addon">
              <i class="glyphicon glyphicon-lock"></i>
              <input type="password" placeholder="Enter your password" name="password" required>
            </div>
            <br />
            <button type="submit" name="submit" value="Submit">Login</button>
            <a href="http://localhost:8000/reset">Reset Password</a>
          </form>
          <br />
          <p style="text-align: center; color: green; font-size: 1.3em;"><strong>NOT REGISTERED? </strong><a
              href='http://localhost:8000/signup' class="btn-sm btn-primary">SIGN UP</a></p>
        </div>
      </div>
    </div>
  </div>